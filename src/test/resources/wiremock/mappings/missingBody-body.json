{
  "request": {
    "method": "POST",
    "url": "/posts",
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.body",
          "absent": true
        }
      }
    ]
  },
  "response": {
    "status": 400,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "error": "Missing body"
    }
  }
}